<%= @cocktail.name %>

<% @cocktail.doses.each do |dose|%>
  <%= dose.description %>
  <%= dose.ingredient.name %>
   <li class="list-group-item">
      <%= dose.description %>
      <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
<% end %>


<%= link_to 'Back', cocktails_path %>

<%= link_to 'Dose', new_cocktail_dose_path(@cocktail) %>
